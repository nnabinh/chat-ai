{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@features/*": ["src/features/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@navigation/*": ["src/navigation/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@theme/*": ["src/theme/*"],
      "@assets/*": ["assets/*"]
    }
  }
}
